{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"]
  },
  "include": ["./src"],
}
